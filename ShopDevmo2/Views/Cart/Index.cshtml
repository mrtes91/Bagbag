@model IEnumerable<ShopDevmo2.Models.ViewModels.CartItem>

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Shopping Cart</h2>

<p>
    @*@Html.ActionLink("Continue shopping", "Index", new { controller = "Product" })*@
    <a target="_self" href="@Url.Action("Index", "Product")" class="btn btn-secondary rounded-0 font-weight-bold mt-3">Continue shopping</a>
</p>

@using (Html.BeginForm("UpdateCart", "Cart", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-thumbnail product-image-thumb" style="max-width:100px; max-height:100px;" src="@Server.UrlDecode(item.ImageUrl)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)

                    <input type="hidden" value="@item.ProductId" name="productIds" id="productId_@item.ProductId" />
                </td>
                <td>
                    <input type="number" value="@item.Quantity" name="quantities" id="quantity_@item.ProductId" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) $
                </td>
                <td>
                    @*@Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                        @Html.ActionLink("Delete", "RemoveFromCart", new { id = item.ProductId })*@
                    <a target="_self" href="@Url.Action("Details", "Product", new { id = item.ProductId })" class="btn btn-info rounded-0 font-weight-bold">Details</a>
                    @Html.ActionLink("Remove", "RemoveFromCart", new { id = item.ProductId }, new { @class = "btn btn-danger rounded-0 font-weight-bold" })
                </td>
            </tr>
        }
    </table>

    @*<input type="submit" value="Update Cart" class="btn btn-default rounded-0" />
        @Html.ActionLink("Check out", "CheckOut")*@
}